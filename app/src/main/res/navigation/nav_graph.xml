<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.finalproject448.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_credentialsListFragment"
            app:destination="@id/credentialsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/credentialsListFragment"
        android:name="com.example.finalproject448.CredentialsListFragment"
        android:label="fragment_credentials_list"
        tools:layout="@layout/fragment_credentials_list" >
        <action
            android:id="@+id/action_credentialsListFragment_to_addCredentialsFragment"
            app:destination="@id/addCredentialsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCredentialsFragment"
        android:name="com.example.finalproject448.AddCredentialsFragment"
        android:label="fragment_add_credentials"
        tools:layout="@layout/fragment_add_credentials" >
        <action
            android:id="@+id/action_addCredentialsFragment_to_generatePasswordFragment"
            app:destination="@id/createPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPasswordFragment"
        android:name="com.example.finalproject448.CreatePasswordFragment"
        android:label="Create Password"
        tools:layout="@layout/fragment_initial_create_password" />
    <action
        android:id="@+id/action_createPasswordFragment_to_loginFragment"
        app:destination="@id/loginFragment" />

    <action
        android:id="@+id/action_credentialsListFragment_to_createPasswordFragment"
        app:destination="@id/createPasswordFragment" />

</navigation>